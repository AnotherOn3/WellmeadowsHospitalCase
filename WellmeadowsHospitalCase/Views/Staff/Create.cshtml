@model WellmeadowsHospitalCase.ViewModels.StaffVM

@{
    ViewBag.Title = "Create";
}

<h2>Create new Staff Member</h2>

<a href="/Staff/" class="btn btn-primary btn-xs">Back</a><br />
<form action="/Staff/Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label>Staff First name</label>
        <input type="text" name="FName" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Staff Last name</label>
        <input type="text" name="LName" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Staff Number</label>
        <input type="number" name="StaffNumber" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Type of Shift</label>
        <input type="text" name="TypeOfShift" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" name="Address" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" name="PhoneNumber" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Date of birth</label>
        <input type="date" name="DateOfBirth" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <input type="text" name="Gender" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Insurance</label>
        <input type="text" name="Insurance" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Contract Id</label>
        <input type="number" name="ContractId" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Position Id</label>
        <input type="number" name="PositionId" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Ward ID</label>
        <input type="number" name="WardId" required class="form-control" />
    </div>

    <input type="submit" name="SaveButton" class="btn btn-success" value="Save" />
</form>


