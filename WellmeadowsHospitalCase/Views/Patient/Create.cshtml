@model WellmeadowsHospitalCase.ViewModels.PatientVM

@{
    ViewBag.Title = "Create";
}

<h2>Create new Staff Member</h2>

<a href="/Patient/" class="btn btn-primary btn-xs">Back</a><br />
<form action="/Patient/Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label>Patient First name</label>
        <input type="text" name="FName" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Patient Last name</label>
        <input type="text" name="LName" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" name="Address" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" name="PhoneNumber" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <input type="text" name="Gender" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Date Registered</label>
        <input type="date" name="RegisterDate" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Marital Status</label>
        <input type="text" name="MaritalStatus" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Local Doctor Id</label>
        <input type="number" name="LocalDoctorId" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Next Of Kin Id</label>
        <input type="number" name="NextOfKinId" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Is Outpatient</label>
        @Html.CheckBoxFor(m => m.IsOutpatient)
    </div>

    <input type="submit" name="SaveButton" class="btn btn-success" value="Save" />
</form>




